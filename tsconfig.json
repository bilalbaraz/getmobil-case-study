{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["presentation/components/*"],
      "@screens/*": ["presentation/screens/*"],
      "@types/*": ["presentation/types/*"],
      "@constants/*": ["constants/*"],
      "@hooks/*": ["hooks/*"],
      "@utils/*": ["utils/*"],
      "@services/*": ["services/*"],
      "@models/*": ["data/models/*"],
      "@repositories/*": ["data/repositories/*"]
    }
  }
}
